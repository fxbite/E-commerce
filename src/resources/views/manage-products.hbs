
    <div class="section-top-border">
		<h3 class="mb-30 set-color-font">Products Management</h3>
		<div class="progress-table-wrap">
							<div class="progress-table">
								<table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Product Name</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">Image URL</th>
                                            <th scope="col">Quantity</th>                                        
											<th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

										{{#each products}}
                                        <tr>
                                            <th scope="row">{{this.ID}}</th>
                                            <td>{{this.name}}</td>
                                             <td>${{this.price}}</td>
                                            <td>{{this.description}}</td>
                                            <td>{{this.image}}</td>
                                            <td>{{this.quantity}}</td>                           
											<td class="text-end">
												
												<a href="/admin/manage-products/{{this._id}}/edit" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
												<a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
											</td>
                                        </tr>
										{{/each}}

                                    </tbody>
								</table>
			                </div>
		                </div>				
	</div>



    <div class="section-top-border">
						<h3 class="mb-30 set-color-font">Staff Management</h3>
						<div class="progress-table-wrap">
							<div class="progress-table">
								<table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Full Name</th>
                                            <th scope="col">Shift</th>
											<th scope="col">Department</th>
                                            <th scope="col">Basic Salary</th>
                                            <th scope="col">Phone Number</th>
                                            <th scope="col">Gender</th>
                                            <th scope="col">Birthday</th>
                                            <th scope="col">Address</th>
											<th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

										{{#each staff}}
                                        <tr>
                                            <th scope="row">{{this.ID}}</th>
                                            <td>{{this.name}}</td>
                                            <td>{{this.shift}}</td>
											<td>{{this.depart}}</td>
                                            <td>{{this.salary}} VND</td>
                                            <td>{{this.phone}}</td>
                                            <td>{{this.gender}}</td>
                                            <td>{{this.birthday}}</td>
                                            <td>{{this.address}}</td>
											<td class="text-end">
												<a href="/admin/manage-staff/{{this._id}}/edit" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
												<a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
											</td>
                                        </tr>
										{{/each}}

                                    </tbody>
								</table>
	

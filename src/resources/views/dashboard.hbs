 <div class="section-top-border">
		<h3 class="mb-30 set-color-font">Products Management</h3>
		<div class="progress-table-wrap">
							<div class="progress-table">
								<table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Department</th>
                                            <th scope="col">Salesman</th>
                                             <th scope="col">Revenue</th>   
                                            <th scope="col">Total Bill</th>                                      
											<th scope="col">Export</th>
                                        </tr>
                                    </thead>
                                    <tbody>

										{{#each products}}
                                        <tr>
                                            <th scope="row">{{this.ID}}</th>
                                            <td>{{this.name}}</td>
                                             <td>${{this.price}}</td>
                                            <td>{{this.description}}</td>
                                            <td>{{this.image}}</td>                                            
											<td class="text-end">
												<a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a>
												<a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
												<a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
											</td>
                                        </tr>
										{{/each}}

                                    </tbody>
								</table>
			                </div>
		                </div>				
	</div>